{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "prepare": "run-s 'prepare.*'",
    "prepare.husky": "husky install || true",
    "prepare.graphql": "pnpm --filter graphql run prepare",
    "prepare.contracts": "pnpm --filter contracts run prepare",
    "prepare.cron": "pnpm --filter cron run prepare",
    "prepare.web": "pnpm --filter web run prepare",
    "pre-commit": "lint-staged",
    "contracts": "pnpm --filter contracts",
    "cron": "pnpm --filter cron",
    "graphql": "pnpm --filter graphql",
    "web": "pnpm --filter web",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all2": "^6.0.6"
  },
  "pnpm": {
    "packageExtensions": {
      "@walletconnect+keyvaluestorage@*": {
        "peerDependencies": {
          "lokijs": "*"
        }
      },
      "node-fetch@*": {
        "peerDependencies": {
          "encoding": "*"
        }
      },
      "pino@*": {
        "peerDependencies": {
          "pino-pretty": "*"
        }
      }
    }
  }
}
