{
  "name": "@app/contracts",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "license": "ISC",
  "scripts": {
    "dev": "concurrently -n chain,deploy -c auto --kill-others-on-fail \"pnpm run anvil\" \"sleep 5 && ./deploy.sh\"",
    "dev.init": "pnpm run deploy.local && pnpm run init.local",
    "dev.script": "tsx src/dev.ts",
    "anvil": "source .env && anvil --chain-id $CHAIN_ID -m \"$MNEMONIC\" --block-time 10",
    "anvil.fork": "source .env && anvil --fork-url $ANVIL_FORK_URL --chain-id $CHAIN_ID -m \"$MNEMONIC\"",
    "deploy.local": "run-s 'deploy.local.*'",
    "deploy.local.Counter": "source .env && forge create contracts/Counter.sol:Counter --rpc-url $FORGE_RPC_URL --private-key $FORGE_PRIVATE_KEY",
    "deploy.local.Faucet": "source .env && forge create contracts/Faucet.sol:Faucet --rpc-url $FORGE_RPC_URL --private-key $FORGE_PRIVATE_KEY",
    "deploy.local.Subscription": "source .env && forge create contracts/Subscription.sol:Subscription --rpc-url $FORGE_RPC_URL --private-key $FORGE_PRIVATE_KEY",
    "deploy.local.WNat": "source .env && forge create contracts/WNat.sol:WNat --rpc-url $FORGE_RPC_URL --private-key $FORGE_PRIVATE_KEY",
    "deploy": "source .env && forge create contracts/Counter.sol:Counter --rpc-url $FORGE_RPC_URL --private-key $FORGE_PRIVATE_KEY --etherscan-api-key $ETHERSCAN_API_KEY --verify",
    "init.local": "CHAIN_ID=31337 tsx src/scripts/init.ts",
    "prepare": "run-s 'prepare.*'",
    "prepare.env": "cp -n .env.example .env 2> /dev/null || true",
    "prepare.compile": "forge build",
    "deprecated.prepare.abi.counter": "forge build --silent && jq '.abi' ./artifacts/Counter.sol/Counter.json > src/abi/Counter.json",
    "deprecated.prepare.abi.faucet": "forge build --silent && jq '.abi' ./artifacts/Faucet.sol/Faucet.json > src/abi/Faucet.json",
    "deprecated.prepare.abi.subscription": "forge build --silent && jq '.abi' ./artifacts/Subscription.sol/Subscription.json > src/abi/Subscription.json",
    "deprecated.prepare.abi.wnat": "forge build --silent && jq '.abi' ./artifacts/WNat.sol/WNat.json > src/abi/WNat.json",
    "prepare.wagmi": "wagmi generate",
    "prepare.build": "pnpm build",
    "build": "rm -rf ./dist && tsc --project tsconfig.dist.json",
    "eslint": "eslint . --ignore-path .gitignore --ext .ts,.tsx",
    "eslint.fix": "eslint . --ignore-path .gitignore --ext .ts,.tsx --fix",
    "wagmi": "wagmi generate",
    "test": "hardhat test",
    "test.forge": "forge test",
    "test.file": "./test-file.sh",
    "test.contract": "./test-contract.sh",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@app/shared": "workspace:^",
    "@wagmi/cli": "^1.5.2",
    "dotenv": "^16.3.1",
    "viem": "^1.18.3",
    "wagmi": "^1.4.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^2.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^1.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.8.10",
    "chai": "^4.2.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.8",
    "lint-staged": "^15.0.2",
    "solidity-coverage": "^0.8.0",
    "tsx": "^3.14.0",
    "typescript": "~5.0.4"
  }
}
