{
  "name": "@app/graphql",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "dev.backup": "mysqldump --defaults-file=./.my.cnf app > .dump.\"${name:-0}\".sql",
    "dev.backup.1": "name=1 pnpm run dev.backup",
    "dev.backup.2": "name=2 pnpm run dev.backup",
    "dev.backup.3": "name=3 pnpm run dev.backup",
    "dev.restore": "mysql --defaults-file=./.my.cnf app < .dump.\"${name:-0}\".sql",
    "dev.restore.1": "name=1 pnpm run dev.restore",
    "dev.restore.2": "name=2 pnpm run dev.restore",
    "dev.restore.3": "name=3 pnpm run dev.restore",
    "predev": "pnpm run codegen",
    "build": "run-s 'build.*'",
    "build.prisma": "prisma generate",
    "build.typescript": "rm -rf ./dist && tsc --project tsconfig.json",
    "build.copy.client": "cp -R ./prisma/client ./dist/prisma",
    "build.schema": "tsx src/schema/index.ts",
    "prepare": "run-s 'prepare.*'",
    "prepare.env": "cp -n .env.example .env 2> /dev/null || true",
    "prepare.cnf": "cp -n .my.cnf.example .my.cnf 2> /dev/null || true",
    "prepare.prisma.generate": "prisma generate",
    "prepare.codegen": "graphql-codegen --config codegen.ts",
    "prepare.typescript": "rm -rf ./dist && tsc --project tsconfig.json",
    "prepare.copy.client": "cp -R ./prisma/client ./dist/prisma",
    "prepare.copy.schema": "cp -R ./schema.graphql ./dist/",
    "eslint": "eslint src/ --ignore-path .gitignore --ext .ts,.tsx",
    "eslint.fix": "eslint src/ --ignore-path .gitignore --ext .ts,.tsx --fix",
    "prettify": "prettier --write '**/*.{ts,tsx}'",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen.watch": "graphql-codegen --watch './src/**/*.ts'",
    "compile": "tsc",
    "start": "node dist/src/server.js",
    "clean": "rm -rf dist",
    "generate": "pnpm run prisma.generate",
    "prisma.format": "prisma format",
    "prisma.generate": "prisma generate",
    "prisma.migrate.dev": "prisma migrate dev",
    "prisma.migrate": "prisma format && prisma migrate dev && prisma generate",
    "prisma.reset": "prisma migrate reset -f",
    "prisma.seed": "prisma db seed",
    "prod.migrate": "prisma migrate deploy",
    "reset": "dotenv -e .env -- prisma migrate reset -f",
    "pre-commit": "lint-staged"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@app/redis": "workspace:^",
    "@app/shared": "workspace:^",
    "@faker-js/faker": "^8.4.1",
    "@graphql-yoga/redis-event-target": "^3.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pothos/core": "^4.1.0",
    "@pothos/plugin-prisma": "^4.2.0",
    "@pothos/plugin-relay": "^4.1.0",
    "@pothos/plugin-scope-auth": "^4.1.0",
    "@prisma/client": "^5.13.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "graphql-ws": "^5.16.0",
    "graphql-yoga": "^5.3.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "viem": "^2.9.26",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/client-preset": "4.2.5",
    "@graphql-codegen/schema-ast": "^4.0.2",
    "@graphql-codegen/typed-document-node": "^5.0.6",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/ws": "^8.5.10",
    "eslint": "^8.52.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "prisma": "^5.13.0",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5"
  }
}
