{
  "name": "@app/graphql",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "predev": "pnpm run codegen",
    "build": "run-s 'build.*'",
    "build.prisma": "prisma generate",
    "build.typescript": "rm -rf ./dist && tsc --project tsconfig.json",
    "build.copy.client": "cp -R ./prisma/client ./dist/prisma",
    "build.schema": "tsx src/schema/index.ts",
    "prepare": "run-s 'prepare.*'",
    "prepare.env": "cp -n .env.example .env 2> /dev/null || true",
    "prepare.prisma.generate": "prisma generate",
    "prepare.codegen": "graphql-codegen --config codegen.ts",
    "prepare.typescript": "rm -rf ./dist && tsc --project tsconfig.json",
    "prepare.copy.client": "cp -R ./prisma/client ./dist/prisma",
    "prepare.copy.schema": "cp -R ./schema.graphql ./dist/",
    "eslint": "eslint src/ --ignore-path .gitignore --ext .ts,.tsx",
    "eslint.fix": "eslint src/ --ignore-path .gitignore --ext .ts,.tsx --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen.watch": "graphql-codegen --watch './src/**/*.ts'",
    "compile": "tsc",
    "start": "node dist/src/server.js",
    "clean": "rm -rf dist",
    "generate": "pnpm run prisma.generate",
    "prisma.format": "prisma format",
    "prisma.generate": "prisma generate",
    "prisma.migrate.dev": "prisma migrate dev",
    "prisma.migrate": "prisma format && prisma migrate dev && prisma generate",
    "prisma.reset": "prisma migrate reset -f",
    "prisma.seed": "prisma db seed",
    "prettify": "prettier --write '**/*.{ts,tsx}'",
    "prod.migrate": "prisma migrate deploy",
    "reset": "dotenv -e .env -- prisma migrate reset -f",
    "pre-commit": "lint-staged"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@app/cron": "workspace:^",
    "@faker-js/faker": "^8.2.0",
    "@graphql-yoga/redis-event-target": "^3.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pothos/core": "^3.38.0",
    "@pothos/plugin-prisma": "^3.61.0",
    "@pothos/plugin-relay": "^3.44.0",
    "@pothos/plugin-scope-auth": "^3.20.0",
    "@prisma/client": "^5.5.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-ws": "^5.14.2",
    "graphql-yoga": "^5.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "viem": "^1.18.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@boost/module": "^4.1.0",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "4.1.0",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^4.1.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/bcryptjs": "^2.4.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.10",
    "@types/ws": "^8.5.8",
    "eslint": "^8.52.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
