{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "removeComments": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
