{
  "name": "@app/cron",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "prepare": "run-s 'prepare.*'",
    "prepare.env": "cp -n .env.example .env 2> /dev/null || true",
    "prepare.build": "pnpm run build",
    "build": "rm -rf ./dist && tsc --project tsconfig.json",
    "dev": "pnpm run dev.workers",
    "dev.workers": "nodemon --config nodemon-worker.json",
    "dev.workers.start": "tsx src/start.ts",
    "dev.workers.pause": "tsx src/pause.ts",
    "dev.workers.schedule": "tsx src/schedule.ts",
    "dev.workers.jobs.failed": "tsx src/jobs/scripts/statsFailed.ts",
    "schedule": "node dist/src/scripts/scheduleJob.js",
    "workers.start": "cross-env NODE_ENV=production node dist/src/start.js",
    "workers.pause": "cross-env NODE_ENV=production node dist/src/pause.js",
    "workers.schedule": "cross-env NODE_ENV=production node dist/src/schedule.js",
    "compile": "tsc && pnpm run lint",
    "prettify": "prettier --write '**/*.{ts,tsx}'",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@app/contracts": "workspace:^",
    "@app/graphql": "workspace:^",
    "bull": "^4.11.3",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "ioredis": "^5.3.2",
    "redis": "^4.6.10",
    "viem": "^1.16.0"
  },
  "devDependencies": {
    "@types/node": "^18.18.0",
    "abitype": "^0.9.10",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.3",
    "tsx": "^3.13.0",
    "typescript": "^5.0.4"
  }
}
